<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cyber.Mods.UI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                x:Name="SelectedGameFolder"
                Text="Hello, World!" />

            <Button
                x:Name="SelectGameFolder"
                Text="Select Game Folder"
                Clicked="OnPickFolderClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
